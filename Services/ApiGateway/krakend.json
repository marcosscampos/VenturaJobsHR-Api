{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "Ventura Jobs HR - API Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "port": 8080,
    "endpoints": [
        {
            "endpoint": "/v1/jobs",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/v1/jobs",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "disable_host_sanitize": false,
                    "host": [
                        "https://ventura-jobs.herokuapp.com/"
                    ],
                    "is_collection": false,
                    "target": ""
                }
            ]
        },
        {
            "endpoint": "/v1/jobs",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/v1/jobs",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "is_collection": true,
                    "target": "",
                    "host": [
                        "https://ventura-jobs.herokuapp.com/"
                    ],
                    "disable_host_sanitize": false
                }
            ],
            "input_query_strings": [
                "page",
                "size",
                "salary",
                "finalDate"
            ]
        }
    ]
}